#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
  macros {
        copy: copy {
            label = "copy";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp C>
                , <&macro_release &kp LCTRL>
                ;
        };

         paste: paste {
            label = "paste";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp V>
                , <&macro_release &kp LCTRL>
                ;
        };

        untab: untab {
            label = "untab";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp W>
                , <&macro_release &kp LCTRL>
                ;
        };

        refresh: refresh {
            label = "refresh";
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp R>
                , <&macro_release &kp LCTRL>
                ;
        };
    };

        keymap {
                compatible = "zmk,keymap";

     

                default_layer {
// -----------------------------------------------------------------------------------------
// | LALT |  '  |  ,  |  .  |  P  |  Y  |   |  F  |  G   |  C  |  R  |  L  | BKSP |
// | TAB  |  A  |  O  |  E  |  U  |  I  |   |  D  |  H   |  T  |  N  |  S  |  ENT |
// | LCTRL|  ;  |  Q  |  J  |  K  |  X  |   |  B  |  M   |  W  |  V  |  Z  |   =  |
//                    | RSE | LWR | SHFT |  | SHFT| RSE  | ALT |
                        bindings = <
   &kp LALT &kp SQT &kp COMMA &kp DOT &kp P &kp Y   &kp F &kp G  &kp C     &kp R   &kp L    &kp BSPC
   &kp TAB &kp A &kp O &kp E &kp U &kp I   &kp D &kp H  &kp T     &kp N   &kp S &kp RET
   &kp LCTRL &kp SEMI &kp Q &kp J &kp K &kp X   &kp B &kp M  &kp W &kp V &kp Z &kp EQUAL
                  &mo 2 &mo 1 &kp LSHFT   &kp RSHFT &kp SPACE &kp RALT
                        >;
                };
                lower_layer {
                        bindings 
                        = <&copy>,
                          <&paste>,
                          <&untab>,
                          <&refresh>      
                        ;
// -----------------------------------------------------------------------------------------
// |  ESC |  1  |  2  |  3  |  4  |  5  |   |     |PG_UP |  UP  |PG_DN|     | BKSP   |
// | LCTRL|     |     | copy|paste|     |   | HOME|  LEFT| DOWN |RIGHT| END | QMARK  |
// | GUI  | F12 |     |     |refresh|untab|   |  _  |      |      |     | "|" | MINUS  | 
//                    | GUI |     | SHFT |   | SHFT |     | ALT |
                        bindings = <
   &kp ESC &kp N1 &kp N2 &kp N3 &kp N4 &kp N5 &trans &kp PG_UP &kp UP &kp PG_DN &trans &kp BSPC
   &bt LCTRL &trans &trans  &trans &copy &paste &trans &kp HOME &kp LEFT &kp DOWN &kp RIGHT &kp END  &kp QMARK
   &kp LGUI  &kp F12 &trans &trans &trans &trans &refresh &untab  &kp UNDER   &trans   &trans &trans    &kp PIPE &kp MINUS
                                    &kp LGUI     &trans       &kp LSHFT      &kp RSHFT  &trans   &kp RALT
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  [  |  7  |  8  |  9  |  ]  | BKSP |
// | CTRL |     |     |     |     |     |   |  (  |  4  |  5  |  6  |  )  |  `   |
// | SHFT |     |     |     |     |     |   |  {  |  1  |  2  |  3  | } |  ~   |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp  TAB  &kp EXCL &kp AT &kp HASH &kp DLLR &kp PRCNT   &kp LBKT &kp N7  &kp N8 &kp N9 &kp RBKT &kp BSPC
   &kp LCTRL &trans   &trans &trans   &trans   &trans      &kp LPAR &kp N4  &kp N5  &kp N6 &kp RPAR &kp GRAVE
   &kp LSHFT &trans   &trans &trans   &trans   &trans      &kp LBRC &kp N1  &kp N2  &kp N3 &kp RBRC &kp TILDE
                             &kp LGUI &trans   &kp SPACE   &kp RET   &trans    &kp RALT
                        >;
                };
        };
};
